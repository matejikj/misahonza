---
import { homepageData } from "../../data/homepage";
import ButtonLink from "../ui/ButtonLink.astro";
import PlaceholderPanel from "../ui/PlaceholderPanel.astro";

interface Props {
  hero: typeof homepageData.hero;
}

const { hero } = Astro.props;
---

<section id="hero" class="section-shell-xl">
  <div class="container-page relative">
    <div class="pointer-events-none absolute inset-x-0 top-0 -z-10 h-[34rem]">
      <div class="absolute left-0 top-8 h-64 w-64 rounded-full bg-accent/10 blur-3xl"></div>
      <div class="absolute right-0 top-0 h-72 w-72 rounded-full bg-accent-2/10 blur-3xl"></div>
    </div>

    <div class="grid items-center gap-10 lg:grid-cols-12 lg:gap-12">
      <div class="lg:col-span-6">
        <p class="editorial-caption mb-4">{hero.eyebrow}</p>
        <h1 class="display-title max-w-[16ch]">{hero.title}</h1>
        <p class="body-copy mt-5 max-w-readable text-base md:text-lg">{hero.subtitle}</p>

        <div class="mt-8 flex flex-col gap-3 sm:flex-row">
          <ButtonLink href={hero.primaryCta.href} label={hero.primaryCta.label} />
          <ButtonLink
            href={hero.secondaryCta.href}
            label={hero.secondaryCta.label}
            variant="secondary"
          />
        </div>

        <ul class="mt-7 flex flex-wrap gap-2">
          {hero.trustPoints.map((point) => (
            <li class="chip">{point}</li>
          ))}
        </ul>

        <p class="mt-5 max-w-readable text-sm leading-6 text-text-muted">{hero.helperText}</p>
      </div>

      <div class="lg:col-span-6">
        <div class="surface-panel overflow-hidden rounded-[28px] shadow-floating">
          <div class="grid gap-0 md:grid-cols-12">
            <div class="md:col-span-8">
              <PlaceholderPanel
                label="Prémiový interiér / denní světlo / dekorativní stěrka"
                ratio="portrait"
                class="h-full rounded-none border-0 shadow-none"
              />
            </div>
            <div class="flex flex-col justify-between border-t hairline bg-surface/70 p-4 md:col-span-4 md:border-l md:border-t-0">
              <div>
                <p class="editorial-caption">Hero detail</p>
                <p class="mt-3 text-sm leading-6 text-text-muted">
                  Světlý interiér, jemná textura a měkký odraz světla jako hlavní vizuální příslib.
                </p>
              </div>
              <div class="mt-6 space-y-2">
                <div class="rounded-md bg-highlight px-3 py-2 text-xs text-text">Clean luxury</div>
                <div class="rounded-md border hairline bg-surface px-3 py-2 text-xs text-text-muted">
                  Editorial layout
                </div>
                <div class="rounded-md border hairline bg-surface px-3 py-2 text-xs text-text-muted">
                  Řemeslný detail
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
