---
import { homepageData } from "../../data/homepage";
import ButtonLink from "../ui/ButtonLink.astro";
import SectionHeading from "../ui/SectionHeading.astro";

interface Props {
  founders: typeof homepageData.founders;
}

const { founders } = Astro.props;
---

<section id="founders" class="section-shell bg-bg-soft/40">
  <div class="container-page">
    <SectionHeading title={founders.title} description={founders.intro} />
    <p class="editorial-caption mt-4">Osobní spolupráce od návrhu po finální detail</p>

    <div class="mt-8 grid gap-4 lg:grid-cols-2">
      {founders.people.map((person, idx) => (
        <article class="surface-panel overflow-hidden">
          <div class="placeholder-ambient relative aspect-[5/4] border-b hairline">
            <div class="placeholder-texture absolute inset-4 rounded-lg opacity-70"></div>
            <div class="absolute left-4 top-4 rounded-full bg-white/85 px-3 py-1 text-xs font-medium shadow-soft">
              Portrét {idx + 1} / placeholder
            </div>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-semibold">{person.name}</h3>
            <p class="mt-2 text-sm font-medium text-accent">{person.role}</p>
            <p class="mt-3 text-sm leading-6 text-text-muted">{person.description}</p>
            <div class="mt-4 flex flex-wrap gap-2">
              <span class="rounded-full bg-highlight px-3 py-1 text-xs font-medium text-text">
                Zakázkový přístup
              </span>
              <span class="rounded-full bg-highlight px-3 py-1 text-xs font-medium text-text">
                Přímá komunikace
              </span>
              <span class="rounded-full bg-highlight px-3 py-1 text-xs font-medium text-text">
                Řemeslná kontrola detailu
              </span>
            </div>
          </div>
        </article>
      ))}
    </div>

    <blockquote class="surface-panel mt-6 p-6">
      <div class="grid gap-4 md:grid-cols-[1fr_auto] md:items-center">
        <p class="font-display text-2xl leading-tight md:text-3xl">“{founders.quote}”</p>
        <ButtonLink href={founders.cta.href} label={founders.cta.label} variant="secondary" />
      </div>
    </blockquote>
  </div>
</section>
