---
import { homepageData } from "../../data/homepage";

interface Props {
  footer: typeof homepageData.footer;
}

const { footer } = Astro.props;
---

<footer class="border-t hairline bg-bg-soft/40">
  <div class="container-page py-10">
    <div class="grid gap-6 lg:grid-cols-12 lg:items-end">
      <div class="lg:col-span-7">
        <p class="font-display text-2xl">{footer.brand}</p>
        <p class="mt-3 max-w-readable text-sm leading-6 text-text-muted">{footer.note}</p>
      </div>
      <div class="lg:col-span-5">
        <p class="editorial-caption mb-3">Material swatches</p>
        <div class="grid grid-cols-2 gap-3 sm:grid-cols-4">
          {footer.swatches.map((swatch, idx) => (
            <div class="rounded-md border hairline bg-surface p-3">
              <div
                class="mb-2 h-8 rounded-sm"
                style={`background: linear-gradient(120deg, rgba(255,255,255,.6), rgba(255,255,255,0) 40%), radial-gradient(circle at 20% 25%, rgba(183,140,90,.18), transparent 55%), radial-gradient(circle at 80% 75%, rgba(143,163,164,.18), transparent 55%), hsl(${35 + idx * 14} 24% ${88 - idx * 4}%);`}
              ></div>
              <p class="text-xs text-text-muted">{swatch}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>

