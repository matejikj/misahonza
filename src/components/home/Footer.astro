---
import { homepageData } from "../../data/homepage";
import { withBase } from "../../utils/withBase";

interface Props {
  footer: typeof homepageData.footer;
}

const { footer } = Astro.props;
const logoSrc = withBase("/images/kabe_farben_slavicin_logo.jpg");
---

<footer class="border-t hairline bg-bg-soft/40">
  <div class="container-page py-10">
    <div class="mx-auto flex max-w-2xl flex-col items-center text-center">
        <img
          src={logoSrc}
          alt="KABE Farben Slavičín"
          class="h-10 w-auto rounded-sm"
          loading="lazy"
          decoding="async"
        />
        <p class="mt-3 font-display text-2xl">{footer.brand}</p>
        <p class="mt-3 max-w-readable text-sm leading-6 text-text-muted">{footer.note}</p>
    </div>
  </div>
</footer>
