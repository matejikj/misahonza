---
import { homepageData } from "../../data/homepage";
import PlaceholderPanel from "../ui/PlaceholderPanel.astro";
import SectionHeading from "../ui/SectionHeading.astro";

interface Props {
  useCases: typeof homepageData.useCases;
}

const { useCases } = Astro.props;
const active = useCases.items[0];
---

<section id="use-cases" class="section-shell">
  <div class="container-page">
    <SectionHeading title={useCases.title} description={useCases.intro} />

    <div class="mt-8 grid gap-8 lg:grid-cols-12 lg:items-start">
      <div class="lg:col-span-5">
        <div class="mb-5 flex flex-wrap gap-2">
          {useCases.items.map((item, idx) => (
            <button
              type="button"
              class:list={[
                "chip focus-ring cursor-default",
                idx === 0 && "chip-active",
              ]}
              aria-pressed={idx === 0 ? "true" : "false"}
            >
              {item.name}
            </button>
          ))}
        </div>

        <div class="surface-panel p-5">
          <h3 class="text-lg font-semibold">{active.name}</h3>
          <p class="mt-3 text-sm leading-6 text-text-muted">{active.description}</p>
          <ul class="bullet-list mt-5">
            {active.bullets.map((bullet) => (
              <li>{bullet}</li>
            ))}
          </ul>
          <p class="editorial-caption mt-6">Task 01: statický preview první varianty, interakce v Task 02</p>
        </div>
      </div>

      <div class="lg:col-span-7">
        <PlaceholderPanel label={active.imageLabel} ratio="portrait" class="shadow-card" />
      </div>
    </div>
  </div>
</section>

