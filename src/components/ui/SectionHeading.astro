---
interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  align?: "left" | "center";
  class?: string;
}

const {
  eyebrow,
  title,
  description,
  align = "left",
  class: className = "",
} = Astro.props;
---

<div class:list={[align === "center" ? "mx-auto max-w-readable text-center" : "", className]}>
  {eyebrow && <p class="editorial-caption mb-3">{eyebrow}</p>}
  <h2 class="section-title">{title}</h2>
  {description && <p class="body-copy mt-4 max-w-readable">{description}</p>}
</div>

