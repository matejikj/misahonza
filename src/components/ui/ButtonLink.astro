---
interface Props {
  href: string;
  label: string;
  variant?: "primary" | "secondary";
  class?: string;
}

const { href, label, variant = "primary", class: className = "" } = Astro.props;
const classes = variant === "primary" ? "cta-primary" : "cta-secondary";
---

<a href={href} class:list={[classes, "focus-ring", className]}>{label}</a>

